<UserControl x:Class="AvaloniaSample.Test.Dispose.View"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             xmlns:sample="using:AvaloniaSample.Test.Dispose">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Click="Button_Click">Change content</Button>

        <ContentControl x:Name="content" Grid.Row="1">
            <ContentControl.Content>
                <sample:UserControl1></sample:UserControl1>
            </ContentControl.Content>
        </ContentControl>
    </Grid>
</UserControl>
